{
  // Workspaces
  "niri/workspaces": {
    "on-click": "activate"
  },

  // Taskbar
  "wlr/taskbar": {
    "format": "{icon} {title:.16}",
    "icon-size": 18,
    "icon-theme": "BeautyLine",
    "tooltip-format": "{title}",
    "on-click": "activate",
    "on-click-middle": "close",
    "ignore-list": ["kitty", "ghostty"],
    "app_ids-mapping": {
      "firefoxdeveloperedition": "firefox-developer-edition"
    },
    "rewrite": {
      "Firefox Web Browser": "Firefox",
      "Foot Server": "Terminal"
    }
  },

  // niri Window
  "niri/window": {
    "swap-icon-label": true,
    "format": "{}",
    "max-length": 50,
    "rewrite": {
      "(.*) - Brave": "$1",
      "(.*) - Chromium": "$1",
      "(.*) - Brave Search": "$1",
      "(.*) - Outlook": "$1",
      "(.*) Microsoft Teams": "$1"
    },
    "separate-outputs": true
  },

  // Empty
  "custom/empty": {
    "format": ""
  },

  "privacy": {
    "icon-spacing": 4,
    "icon-size": 14,
    "transition-duration": 250,
    "modules": [
     {
       "type": "screenshare",
       "tooltip": true,
       "tooltip-icon-size": 14
     },
     {
       "type": "audio-out",
       "tooltip": true,
       "tooltip-icon-size": 14
     },
     {
       "type": "audio-in",
       "tooltip": true,
       "tooltip-icon-size": 14
     }
    ]
   },

   "wireplumber": {
      "format": "{icon} {volume}%",
      "format-muted": "ÔÄ¶ Muted",
      "format-icons": ["ÔÄ¶ ", "ÔÄß ", "ÔÄ® "],
      "scroll-step": 0.2,
      "max-volume": 100,
      "on-click": "pavucontrol",
      "on-click-right": "qpwgraph"
    },
    "mpris": {
      "format": "{player_icon} {dynamic}",
      "format-paused": "{status_icon} <i>{dynamic}</i>",
      "max-length": 30,
      "player-icons": {
        "default": "Û∞éÜ ",
        "cmus": "ÔÄÅ",
        "mpv": "üéµ",
        "vlc": "üé¨",
        "spotify": "ÔÜº "
      },
      "status-icons": {
        "paused": "‚è∏"
      },
      "on-click": "playerctl play-pause",
      "on-click-right": "playerctl next",
      "smooth-scrolling-threshold": 10,
      "on-scroll-down": "playerctl previous"
    },


  // Tools
  "custom/tools": {
    "format": "ÔóΩ",
    "tooltip-format": "Tools"
  },

  // Updates Count
  "custom/updates": {
      "format": "{} {icon}",
      "return-type": "json",
      "format-icons": {
          "has-updates": "Û±ç∑",
          "updated": "Û∞Ç™"
      },
      "exec-if": "which waybar-module-pacman-updates",
      "exec": "waybar-module-pacman-updates --interval-seconds 5 --network-interval-seconds 300"
  },

  // wofi Application Launcher
  "custom/appmenu": {
    "format": "   ",
    "on-click": "sleep 0.2;wofi -show drun -replace",
    "tooltip-format": "Left: Open the application launcher\nRight: Show all keybindings"
  },

  // wofi Application Launcher
  "custom/appmenuicon": {
    "format": "ÔåÉ",
    "on-click": "sleep 0.2;wofi -show drun -replace",
    "tooltip-format": "Left: Open the application launcher\nRight: Show all keybindings"
  },

  // Power Menu
  "custom/exit": {
    "format": " Û∞ê• ",
    "on-click": "~/.config/waybar/scripts/power-menu.sh",
    "tooltip-format": "Power Menu"
  },

  // Keyboard State
  "keyboard-state": {
    "numlock": true,
    "capslock": true,
    "format": "{name} {icon}",
    "format-icons": {
      "locked": "ÔÄ£",
      "unlocked": "ÔÇú"
    }
  },

  // System tray
  "tray": {
    "icon-size": 16,
    "spacing": 10
  },

  // Clock
  "clock": {
    "format": "‚è∞{:%I:%M %p}",
    "format-alt": "üìÖ{:%A, %B %d, %Y (%I:%M %p)}",
    //"format": "{:%H:%M %a}",
    //"on-click": "ags -t calendar",
    "tooltip-format": "<tt><small>{calendar}</small></tt>",
    "calendar": {
      "mode": "year",
      "mode-mon-col": 3,
      "weeks-pos": "right",
      "on-scroll": 1,
      "on-click-right": "mode",
      "format": {
        "months": "<span color='#ffead3'><b>{}</b></span>",
        "days": "<span color='#ecc6d9'><b>{}</b></span>",
        "weeks": "<span color='#99ffdd'><b>W{}</b></span>",
        "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
        "today": "<span color='#ff6699'><b><u>{}</u></b></span>"
      }
    },
    "actions": {
      "on-click-right": "mode",
      "on-click-forward": "tz_up",
      "on-click-backward": "tz_down",
      "on-scroll-up": "shift_up",
      "on-scroll-down": "shift_down"
    }
  },

  "niri/language": {
    "format": "/ K {short}"
  },

  // Battery
  "battery": {
    "interval": 60,
    "states": {
      "good": 95,
      "warning": 30,
      "critical": 20
    },
    "format": "{icon} {capacity}%",
    "format-warning": "{icon} {capacity}%",
    "format-charging": "Ôóß  {capacity}%",
    "format-plugged": "Ôá¶  {capacity}%",
    "tooltip": "{time} {icon}",
    // "format-alt": "{timeTo} / {health}",
    // "format-good": "", // An empty format will hide the module
    "format-full": "‚ö° {capacity}%",
    "format-icons": ["Û∞Çé", "Û∞Å∫", "Û∞Åª", "Û∞Åº", "Û∞ÅΩ", "Û∞Åæ", "Û∞Åø", "Û∞ÇÄ", "Û∞ÇÅ", "Û∞ÇÇ", "Û∞Åπ"]
  },

  // Pulseaudio
  "pulseaudio": {
    // "scroll-step": 1, // %, can be a float
    "format": "{icon}  {volume}%",
    "format-bluetooth": "{volume}% {icon}Ôäî {format_source}",
    "format-bluetooth-muted": "Ôö© {icon}Ôäî {format_source}",
    "format-muted": "Ôö© {format_source}",
    "format-source": "{volume}% ÔÑ∞",
    "format-source-muted": "ÔÑ±",
    "format-icons": {
	    "headphone": "ÔÄ•",
            "hands-free": "Û±°í",
            "headset": "Û∞ãé",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
    },
    "scroll-step": 5,
    "on-click": "pavucontrol",
    "tooltip-format": "{desc} | {format_source}"
  },
  "pulseaudio/slider": {
    "min": 0,
    "max": 100,
    "orientation": "vertical"
  },
  "group/audio": {
    "orientation": "inherit",
    "drawer": {
      "transition-duration": 400,
      "children-class": "audio",
      "transition-left-to-right": false
    },
    "modules": [
      "pulseaudio",
      "pulseaudio/slider"
    ]
  },

  // Bluetooth
  "bluetooth": {
    "format": "Ôäì {status}",
    "format-connected": "Ôäì {device_alias}",
    "format-connected-battery": "Ôäì {device_alias} {device_battery_percentage}%",
    "tooltip-format": "{controller_alias}\t{controller_address}\n\n{num_connections} connected",
    "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{num_connections} connected\n\n{device_enumerate}",
    "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
    "tooltip-format-enumerate-connected-battery": "{device_alias}\t{device_address}\t{device_battery_percentage}%",
    "interval": 30,
    "on-click": "blueman-manager",
    "format-no-controller": ""
  },

  // Other
  "user": {
    "format": "{user}",
    "interval": 60,
    "icon": false
  },

  // backlight:
  "backlight": {
    "device": "intel_backlight",
    "format": "{icon} {percent}%",
    "format-icons": [ "Óéç", "Óèî", "Óèì", "Óèí", "Óèë", "Óèê", "Óèè", "Óèé", "Óèç", "Óèå", "Óèã", "Óèä", "Óèâ", "Óèà", "Óéõ" ],
    "scroll-step": 1,
    "on-scroll-up": "brightnessctl set 1%+",
    "on-scroll-down": "brightnessctl set 1%-"
  },

  // Vitals (CPU/MEM)
  "cpu": {
    "tooltip": "{avg_frequency}",
    "format": "Ôíº {usage}%",
    "interval": 1
  },
  "temperature": {
    "interval": 2,
    "critical-threshold": 80,
    "format": "{icon} {temperatureC}¬∞C",
    "format-icons": ["Ôù´", "Ôãâ", "Ôù©"],
    "tooltip": false
  },
  "memory": {
    "format": "Óâ¶  {used:0.1f}G",
    "interval": 5,
    "tooltip": true,
    "tooltip-format": "{used:0.1f}G/{total:0.1f}G"
  },
  "custom/gpu": {
    "exec": "nvidia-smi --query-gpu=utilization.gpu,temperature.gpu --format=csv,noheader,nounits | awk -F', ' '{print \"Û∞¢Æ \"$1\"% \"$2\"¬∞C\"}'",
    "interval": 5,
    "format": "{}",
    "tooltip": false
  },

  "network": {
    "format": "{ifname} [Û∞æÜ {bandwidthTotalBytes}]",
    "format-wifi": "{icon} {essid} [Û∞æÜ {bandwidthTotalBytes}]",
    "format-ethernet": "Û±òñ  {ifname} [Û∞æÜ {bandwidthTotalBytes}]",
    "format-disconnected": "Û∞åô Disconnected ‚ö†",
    "format-alt": "Ó¨Å  {ipaddr} ÔÑπ {bandwidthUpBytes} ÔÑ∫ {bandwidthDownBytes}",
    "tooltip-format": "{ifname} via {gwaddr} Ôûñ",
    "tooltip-format-wifi": "{frequency} MHz ({signalStrength}%)",
    "tooltip-format-ethernet": "{ipaddr}/{cidr} ÔÑπ {bandwidthUpBytes} ÔÑ∫ {bandwidthDownBytes}",
    "tooltip-format-disconnected": "Disconnected ‚ö†",
    "max-length": 50,
    "format-icons": ["Û∞§Ø ", "Û∞§ü ", "Û∞§¢ ", "Û∞§¢ ", "Û∞§® "],
    "on-click": "nm-connection-editor"
  },

  "custom/notification": {
    "format": "Û∞Çö",
    "on-click": "makoctl dismiss -a",
    "on-click-right": "makoctl restore",
    "tooltip-format": "Left: Clear all\nRight: Restore last"
  }
}
