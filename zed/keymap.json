[
  {
    "context": "Editor",
    "bindings": {
      "ctrl-j": "editor::ShowCompletions",
      "alt-enter": "editor::ToggleCodeActions"
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      // "shift shift": "file_finder::Toggle"
      "alt-`": "workspace::ToggleBottomDock"
    }
  },
  {
    "bindings": {
      "alt-v": "markdown::OpenPreviewToTheSide"
    }
  }
]
