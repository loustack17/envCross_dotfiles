// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "vim_mode": true,
  "context_servers": {
    "mcp-server-github": {
      "enabled": true,
      "settings": {
        "github_personal_access_token": ""
      }
    },
    "mcp-server-markitdown": {
      "enabled": true,
      "settings": {
        "args": [
          "-y",
          "markitdown-mcp-npx"
        ],
        "command": "npx",
        "package_version": "latest",
      },
    },
    "azure-context-server": {
      "enabled": true,
      "settings": {
        "enable_production_credentials": false,
      },
    },
    "playwright": {
      "command": "npx",
      "args": [
        "@playwright/mcp@latest"
      ],
      "env": {},
    },
  },
  "preview_tabs": {
    "enable_preview_from_file_finder": true,
  },
  "tabs": {
    "file_icons": true,
    "git_status": true,
  },
  "title_bar": {
    "show_menus": false,
    "show_branch_icon": true,
  },
  "use_smartcase_search": true,
  "prettier": {
    "allowed": true,
  },
  "agent": {
    "always_allow_tool_actions": true,
    "dock": "left",
    "profiles": {},
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4.5",
    },
    "model_parameters": [],
  },
  "project_panel": {
    "dock": "right",
  },
  "terminal": {
    "toolbar": {
      "breadcrumbs": true,
    },
    "shell": "system",
    "font_family": "SFMono Nerd Font",
    "font_fallbacks": [
      "Hack Nerd Font Mono",
      "FiraCode Nerd Font Mono",
      "JetBrainsMono Nerd Font Mono",
    ],
  },
  "node": {
    "npm_path": "pnpm",
  },
  "base_keymap": "VSCode",
  "minimap": {
    "show": "auto",
  },
  "buffer_font_fallbacks": [
    "Hack Nerd Font Mono",
    "FiraCode Nerd Font Mono"
  ],
  "buffer_font_family": "SFMono Nerd Font",
  "file_types": {
    "msbuild": [
      "*.csproj"
    ],
    "tailwindcss": [
      "*.css"
    ],
  },
  "auto_indent_on_paste": true,
  "linked_edits": true,
  "use_on_type_format": true,
  "show_edit_predictions": true,
  "icon_theme": "Material Icon Theme",
  "ui_font_size": 16,
  "buffer_font_size": 13.0,
  "theme": {
    "mode": "dark",
    "light": "One Light",
    "dark": "Catppuccin Mocha",
  },
  "languages": {
    "CSharp": {
      "format_on_save": "on",
      "formatter": "language_server",
    },
    // JS, TS, TSX, Vue：Prettier + ESLint
    "JavaScript": {
      "formatter": "prettier",
      "format_on_save": "on",
      "code_actions_on_format": {
        "source.fixAll.eslint": true,
      },
      "language_servers": [
        "typescript-language-server",
        "!vtsls",
        "..."
      ],
    },
    "TypeScript": {
      "format_on_save": "on",
      "formatter": "prettier",
      "code_actions_on_format": {
        "source.fixAll.eslint": true,
      },
      "language_servers": [
        "typescript-language-server",
        "!vtsls",
        "..."
      ],
    },
    "TSX": {
      "format_on_save": "on",
      "formatter": "prettier",
      "code_actions_on_format": {
        "source.fixAll.eslint": true,
      },
      "language_servers": [
        "typescript-language-server",
        "!vtsls",
        "..."
      ],
    },
    // JSON, JSONC：Prettier + generic fixAll
    "JSON": {
      "formatter": "language_server",
      "format_on_save": "on",
      "code_actions_on_format": {
        "source.fixAll": true,
      },
    },
    "JSONC": {
      "formatter": "language_server",
      "format_on_save": "on",
      "code_actions_on_format": {
        "source.fixAll": true,
      },
    },
    // Markdown：Prettier + markdownlint
    "Markdown": {
      "tab_size": 2,
      "formatter": "prettier",
      "format_on_save": "on",
      "code_actions_on_format": {
        "source.fixAll.markdownlint": true,
      },
    },
    // CSS, LESS, SCSS：Prettier + Stylelint
    "CSS": {
      "formatter": "prettier",
      "format_on_save": "on",
      "code_actions_on_format": {
        "source.fixAll.stylelint": true,
      },
    },
    "LESS": {
      "formatter": "prettier",
      "format_on_save": "on",
      "code_actions_on_format": {
        "source.fixAll.stylelint": true,
      },
    },
    "SCSS": {
      "formatter": "prettier",
      "format_on_save": "on",
      "code_actions_on_format": {
        "source.fixAll.stylelint": true,
      },
    },
    "YAML": {
      "formatter": "language_server",
      "format_on_save": "on",
      "tab_size": 2,
      "hard_tabs": false,
    },
    "TOML": {
      "formatter": "language_server",
      "format_on_save": "on",
      "tab_size": 2,
      "hard_tabs": false,
      "code_actions_on_format": {
        "source.fixAll": true,
      },
    },
    "Go": {
      "format_on_save": "on",
      "formatter": "language_server",
      "code_actions_on_format": {
        "source.organizeImports": true,
      },
    },
    "Python": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "ruff",
          "arguments": [
            "format",
            "--stdin-filename",
            "{buffer_path}"
          ],
        },
      },
      "language_servers": [
        "pyright",
        "ruff",
        "ty"
      ],
      "tab_size": 2,
      "hard_tabs": false,
      "code_actions_on_format": {
        "source.fixAll": true,
      },
    },
  },
  "lsp": {
    "omnisharp": {
      "initialization_options": {
        "EnableEditorConfigSupport": true,
        "AnalyzeOpenDocumentsOnly": true,
      },
    },
    "gopls": {
      "initialization_options": {
        "analyses": {
          "unusedparams": true,
          "nilness": true,
        },
        "staticcheck": true,
        "formatting.gofumpt": true,
      },
    },
    "ruff": {
      "initialization_options": {
        "settings": {
          "args": [
            "--ignore",
            "E501"
          ],
        },
      },
    },
  },
}
